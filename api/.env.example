# Server Configuration
PORT=3000
NODE_ENV=development

# Azure AD Configuration (for validating user tokens)
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-backend-client-id
AZURE_CLIENT_SECRET=your-client-secret-for-obo

# Azure AI Foundry Configuration
FOUNDRY_ENDPOINT=https://your-foundry-instance.services.ai.azure.com
FOUNDRY_PROJECT_ID=your-project-id
FOUNDRY_AGENT_ID=your-agent-id

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,https://your-frontend-url.azurecontainerapps.io

# Managed Identity (set to 'true' in production on Container Apps)
USE_MANAGED_IDENTITY=false
